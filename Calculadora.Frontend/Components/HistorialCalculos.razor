<!-- Calculadora.Frontend/Shared/HistorialCalculos.razor -->
<h3>Historial de Cálculos</h3>

@if (Registros == null)
{
    <p>Cargando historial...</p>
}
else if (!Registros.Any())
{
    <p>No hay cálculos guardados.</p>
}
else
{
    <ul class="list-group">
        @foreach (var registro in Registros)
        {
            <li class="list-group-item">
                <strong>@registro.NombreDescriptivo:</strong> @registro.Resultado 
                <small class="text-muted float-end">@registro.FechaRegistro.ToShortDateString()</small>
            </li>
        }
    </ul>
}

@code {
    [Parameter]
    public List<RegistroCalculoDto> Registros { get; set; }
}